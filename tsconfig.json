{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",     
    "moduleResolution": "node",                          
    "baseUrl": "./src",                                
    "paths": {                                 
      "@infra/*": ["infra/*"],                                         
    },                                     
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                            
  }
}
